#!/bin/bash

if [ $# -eq 0 ]; then
  exit 0
elif echo "$1" | grep -q "github\|\.git$" &&
  ! echo "$1" | grep -q "github\.io\|raw\.github\.com\|githubusercontent"; then
  git clone "$1"
elif command -v curl &>/dev/null; then
  curl -ORLk "$1"
elif command -v wget &>/dev/null; then
  wget --no-check-certificate --user-agent=download "$1"
fi
shift
$0 "$@"
