#!/bin/bash
set -eu

cmdname="${BASH_SOURCE[0]##*/}"

if [ $# -ge 2 ]; then
  echo "$cmdname: too many arguments" >&2
  exit 1
fi

subcmd=${1:-start}

case "$subcmd" in
  start|init)
    open -a Dropbox
    ;;
  stop|kill)
    pkill -x Dropbox
    ;;
  *)
    echo "$cmdname: unknown command: $subcmd" >&2
    exit 1
    ;;
esac
